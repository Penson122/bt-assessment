{
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "plugins": [
    "promise",
    "chai-friendly"
  ],
  "env": {
    "es6" : true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : "off",
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off",
    "semi"                 : [2, "always"],
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2
  }
}
